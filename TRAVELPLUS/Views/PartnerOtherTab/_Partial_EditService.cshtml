@using TRAVELPLUS.Utilities
@model CRM.Core.tbl_ServicesPartner

<div class="modal fade  bs-modal-lg" id="modal-edit-servicepartner" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Cập nhật dịch vụ đối tác</h4>
            </div>
            @using (Ajax.BeginForm("UpdateServicePartner", "PartnerOtherTab", null, new AjaxOptions { OnFailure = "OnFailurePartner", OnSuccess = "OnSuccessPartner", UpdateTargetId = "dichvucungcap" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PartnerId)
                @Html.HiddenFor(model => model.CreatedDate)
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tên dịch vụ</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Chi phí</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", })
                                    </div>
                                    <div class="col-lg-3 col-md-3">
                                        <select id="edit-currency-service" name="CurrencyId" style="width: 100%" class="form-control">
                                            @foreach (var item in LoadData.CurrencyList())
                                            {
                                                <option value="@item.Id" @(Model != null && Model.CurrencyId == item.Id ? "selected" : "")>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ghi chú</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", id = "edit-note-servicepartner" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>