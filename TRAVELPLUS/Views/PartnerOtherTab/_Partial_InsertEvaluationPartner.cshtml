@using CRM.Core
@using TRAVELPLUS.Utilities
@model tbl_Evaluation

<div class="modal fade bs-modal-lg" id="modal-insert-evaluation" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới đánh giá</h4>
            </div>
            @using (Ajax.BeginForm("CreateEvaluation", "PartnerOtherTab", null, new AjaxOptions { OnSuccess = "OnSuccessPartner", OnFailure = "OnFailurePartner", UpdateTargetId = "danhgia"  }))
            {
                <input type="hidden" name="PartnerId" value="@ViewBag.parentId" />
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Tour</label>
                                    <div class="col-lg-10 col-md-10">
                                        <select class="form-control" style="width: 100%" id="insert-tour-evaluation" name="TourId">
                                            <option>-- Chọn tour --</option>
                                            @foreach (var item in LoadData.TourList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Vùng miền</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" style="width: 100%" id="insert-area-evaluation" name="AreaId">
                                            <option>-- Chọn vùng miền --</option>
                                            @foreach (var item in LoadData.AreaList())
                                            {
                                                <option value="@item.Id">@item.Tags</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Tỉnh thành</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" style="width: 100%" id="insert-province-evaluation" name="ProvinceId">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2"></label>
                                    <div class="col-md-10 col-lg-10">
                                        <a id="btnAddD" class="btn btn-danger" style="cursor: pointer"><i class="fa fa-plus"></i></a>
                                        <a id="btnDelD" class="btn btn-default" style="cursor: pointer"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                                <div class="clonedInput-ep" id="entry-ep1">
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2 insert-title-ep" id="insert-title-ep">Tiêu chí đánh giá 1</label>
                                        <div class="col-lg-4 col-md-4">
                                            <select class="form-control insert-evaluation-ep" style="width: 100%" id="insert-evaluation-ep1" name="EvaluationCriteriaId1">
                                                @foreach (var item in LoadData.EvaluationCriteriaList())
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <label class="control-label col-lg-2 col-md-2">Điểm</label>
                                        <div class="col-lg-4 col-md-4">
                                            <input type="number" name="EvaluationPoint1" id="insert-point-ep1" class="form-control insert-point-ep" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input type="text" name="EvaluationNote1" id="insert-note-ep1" class="form-control insert-note-ep" />
                                        </div>
                                    </div>
                                    <hr />
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", id = "insert-note" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <input type="hidden" value="1" id="NumberEvaluation" name="NumberEvaluation" />
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>