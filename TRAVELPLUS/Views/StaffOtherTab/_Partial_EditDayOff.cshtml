@using TRAVELPLUS.Utilities
@model CRM.Core.tbl_StaffDayOff

<div class="modal fade bs-modal-lg" id="modal-edit-dayoff" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Cập nhật Ngày nghỉ phép</h4>
            </div>
            @using (Ajax.BeginForm("UpdateDayOff", "StaffOtherTab", null, new AjaxOptions { OnFailure = "OnFailureSalary", OnSuccess = "OnSuccessSalary", UpdateTargetId = "ngaynghiphep" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.StaffId)
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Số ngày</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextBoxFor(model => model.NumberDay, new { @class = "form-control", @required= "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Từ ngày</label>
                                    <div class="col-lg-10 col-md-10">
                                        <input type="date" class="form-control" name="StartDay" value="@Model.StartDay.ToString("yyyy-MM-dd")" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Đến ngày</label>
                                    <div class="col-lg-10 col-md-10">
                                        <input type="date" class="form-control" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Lý do</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @placeholder = "Nhập lí do xin phép nghỉ" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>