@using TRAVELPLUS.Utilities
@model CRM.Core.tbl_StaffSalary

<div class="modal fade bs-modal-lg" id="modal-edit-salary" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Sửa thông tin lương</h4>
            </div>
            @using (Ajax.BeginForm("UpdateStaffSalary", "StaffOtherTab", null, new AjaxOptions { OnFailure = "OnFailureSalary", OnSuccess = "OnSuccessSalary", UpdateTargetId = "salary" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.StaffId)
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                @if (Model.tbl_Staff != null)
                                {
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label class="col-lg-4 col-md-4 text-right">Nhân viên</label>
                                            <label class="col-lg-5 col-md-5">
                                                @Model.tbl_Staff.FullName
                                            </label>
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Lương thử việc</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.StartSalary, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Lương cơ bản</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.BasicSalary, new { @class = "form-control", @id = "txtUpdateBasicSalary", onchange = "CalculatorSalary('Update')" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Phụ cấp</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.SubsidySalary, new { @class = "form-control", @id = "txtUpdateSubsidySalary", onchange = "CalculatorSalary('Update')" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Trợ cấp</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.AllowanceSalary, new { @class = "form-control", @id = "txtUpdateAllowanceSalary", onchange = "CalculatorSalary('Update')" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Lương chính thức</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextBoxFor(model => model.CurSalary, new { @class = "form-control", @id = "txtUpdateCurSalary", onchange = "CalculatorSalary('Update')" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ghi chú</label>
                                    <div class="col-lg-6 col-md-6">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>