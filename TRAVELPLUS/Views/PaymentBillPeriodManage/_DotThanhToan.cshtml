@using CRM.Core
@using TRAVELPLUS.Models
@model IEnumerable<tbl_PaymentBillPeriod>
<a class="btn btn-primary" style="cursor: pointer" onclick="insertPeriod()"><i class="fa fa-plus"></i>&nbsp;Thêm</a>
<br /><br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="table-history">
        <thead>
            <tr>
                <th>#</th>
                <th>Đợt thanh toán</th>
                <th>Số tiền</th>
                <th>Hình thức thanh toán</th>
                <th>Ngày nộp</th>
            </tr>
        </thead>
        @if (Model != null)
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX" id="period@(item.Id)">
                        <td class="textaligncenter">
                            <a style="cursor: pointer" onclick="updatePeriod(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a> | 
                            <a style="cursor: pointer" onclick="deletePeriod(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>
                        </td>
                        <td class="textaligncenter">@item.Period</td>
                        <td class="textaligncenter">@(item.tbl_Dictionary != null ? item.tbl_Dictionary.Name : "")</td>
                        <td class="textaligncenter">@(item.Price != null ? item.Price.Value.ToString("0,0").Replace(",", ".") : "")</td>
                        <td class="textaligncenter">@string.Format("{0:dd-MM-yyyy}", item.Date)</td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
