@using CRM.Core
@model IEnumerable<tbl_CustomerLeague>
@{
    int i = 1;
}
@if (ViewBag.IsAdd != null && ViewBag.IsAdd)
{<a class="btn btn-primary" id="btnAddLeague" onclick="createLeague()"><i class="fa fa-plus"></i>&nbsp;Thêm</a>}
<br /><br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Liên minh hàng không</th>
                <th>Hạng thẻ</th>
                <th>Mã thẻ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateLeague(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}

                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            { <a style="cursor: pointer" onclick="deleteLeague(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                        </td>
                        <td style="text-align: center">@i</td>
                        <td>@(item.tbl_DictionaryAirlineLeague != null ? item.tbl_DictionaryAirlineLeague.Name : "")</td>
                        <td>@(item.tbl_DictionaryCardLevel != null ? item.tbl_DictionaryCardLevel.Name : "")</td>
                        <td>@item.Code</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>


