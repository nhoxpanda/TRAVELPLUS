@using CRM.Core
@model IEnumerable<tbl_MemberCardHistory>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>STT</th>
                <th>Loại thẻ</th>
                <th>Điểm</th>
                <th>Tiêu đề</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@(item.tbl_MemberCard != null ? item.tbl_MemberCard.Name : "")</td>
                        <td>@item.Point</td>
                        <td>@item.Name</td>
                        <td>@Html.Raw(item.Note)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>


