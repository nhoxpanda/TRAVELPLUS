@using CRM.Core
@model IEnumerable<tbl_EvaluationDetail>

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>Tiêu chí đánh giá</th>
                <th>Điểm</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td>@(item.tbl_EvaluationCriteria != null ? item.tbl_EvaluationCriteria.Name : "")</td>
                    <td>@item.Point</td>
                    <td>@item.Note</td>
                </tr>
            }
        </tbody>
    </table>
</div>

