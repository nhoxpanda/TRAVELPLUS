@model IEnumerable<CRM.Core.tbl_StaffBonusDiscipline>
@{
    int i = 1;
}

@if (ViewBag.IsAdd != null && ViewBag.IsAdd)
{
    <a class="btn btn-primary" onclick="btnCreateBonusDiscipline();" id="btnCreateBonusDiscipline"><i class="fa fa-plus"></i>&nbsp;Thêm</a>
}
<br />
<br />

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Khen thường/Kỷ luật</th>
                <th>Nội dung</th>
                <th>Ngày áp dụng</th>
                <th>Ngày nhập</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            { <a style="cursor: pointer" onclick="updateBonusDiscipline(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            {   <a style="cursor: pointer" onclick="deleteBonusDiscipline(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                        </td>
                        <td style="text-align: center">@i</td>
                       <td>@(item.TypeId == 1 ? "Khen thưởng" : "Kỉ luật")</td>
                        <td>@item.Name</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.ActionDate)</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDate)</td>
                        <td>@(item.Note)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
