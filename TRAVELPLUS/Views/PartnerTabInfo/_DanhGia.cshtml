@using CRM.Core
@using TRAVELPLUS.Utilities
@model IEnumerable<tbl_Evaluation>

<a class="btn btn-primary" id="btnCreateEvaluation" onclick="btnCreateEvaluation()"><i class="fa fa-plus"></i>&nbsp;Thêm</a>
<br />
<br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>Vùng miền</th>
            <th>Tỉnh thành</th>
            <th>Điểm</th>
            <th>Nội dung</th>
            <th>Tour</th>
            <th>Người nhập</th>
            <th>Ngày nhập</th>
        </tr>
        @if (Model != null)
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateEvaluation(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a>}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            {   <a style="cursor: pointer" onclick="deleteEvaluation(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}<br />
                            <a style="cursor: pointer" onclick="detailEvaluation(@item.Id)"><i class="fa fa-list"></i>&nbsp;Chi tiết đánh giá</a>
                        </td>
                        <td>@(item.tbl_TagsArea != null ? item.tbl_TagsArea.Tag : "")</td>
                        <td>@(item.tbl_TagsProvince != null ? item.tbl_TagsProvince.Tag : "")</td>
                        <td>@string.Format("{0:##}", item.Point)</td>
                        <td>@item.Note</td>
                        <td>@(item.tbl_Tour != null ? item.tbl_Tour.Name : "")</td>
                        <td>@(item.tbl_StaffCreate != null ? item.tbl_StaffCreate.FullName : "")</td>
                        <td>@(item.CreatedDate != null ? item.CreatedDate.ToString("dd-MM-yyyy") : "")</td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
